<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/goToPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onClickGotoPositionButton"
            android:text="Trade List - Trial 1" />

        <Button
            android:id="@+id/goToPositionTrial2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onClickGotoPositionTrial2Button"
            android:text="Positions - Trial 2" />

        <Button
            android:id="@+id/goToAddTradeTrial3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onClickGotoAddTradeTrial3Button"
            android:text="Add Trade - Trial 3" />

        <Button
            android:id="@+id/goToSynopsisTrial4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="onClickGotoSynopsisTrial4Button"
            android:text="Synopsis - Trial 4" />.

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/red_2"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            tools:layout_editor_absoluteX="1dp" />

        <Button
            android:id="@+id/gotoSynopsis2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synopsis2"
            android:layout_gravity="center"
            android:onClick="onClickGotoSynopsis2"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/gotoSuggestion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suggestion1"
            android:layout_gravity="center"
            android:onClick="onClickGotoSuggestion1"
            tools:ignore="OnClick" />

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>