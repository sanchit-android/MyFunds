<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InvestmentSynopsis1Activity">

    <LinearLayout
        android:id="@+id/synopsis_box1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rect_shape_summary_info_1"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/portfolio"
            android:textColor="@color/summary_text_1"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Rs"
                android:textColor="@color/summary_text_1"
                android:textSize="20sp" />

            <TextView android:id="@+id/synopsis_box1_valuation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="1,689,000"
                android:textColor="@color/summary_text_1"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Funds"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/summary_text_1"
                    android:textSize="15sp" />

                <TextView android:id="@+id/synopsis_box1_funds_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="15"
                    android:textColor="@color/summary_text_1"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="Invested "
                    android:textColor="@color/summary_text_1"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:gravity="right"
                    android:text="@string/Rs"
                    android:textColor="@color/summary_text_1"
                    android:textSize="15sp" />

                <TextView android:id="@+id/synopsis_box1_invested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:gravity="right"
                    android:text="1"
                    android:textColor="@color/summary_text_1"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/synopsis_box_top_profit_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_rect_shape_positive_info_1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:onClick="onClickTopPerformingCategory">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="25dp"
                            android:text="TOP PERFORMING CATEGORY"
                            android:textColor="@color/positive_text_1"
                            android:textSize="@dimen/synopsis1_box_name" />

                        <TextView android:id="@+id/synopsis_box_top_profit_category_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overseas (US) Funds"
                            android:gravity="center"
                            android:textColor="@color/positive_text_1"
                            android:textSize="@dimen/synopsis1_box_winner_name" />

                        <TextView android:id="@+id/synopsis_box_top_profit_category_funds_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@color/positive_text_1"
                            android:textSize="@dimen/synopsis1_box_data" />

                        <TextView android:id="@+id/synopsis_box_top_profit_category_invested"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="25dp"
                            android:text="2,345,000"
                            android:textColor="@color/positive_text_1"
                            android:textSize="@dimen/synopsis1_box_data" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/synopsis_box_top_profit_fund"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_rect_shape_positive_info_2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="25dp"
                            android:text="TOP PERFORMING FUND"
                            android:textColor="@color/positive_text_1"
                            android:textSize="@dimen/synopsis1_box_name" />

                        <TextView android:id="@+id/synopsis_box_top_profit_fund_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Motilal Oswal Nasdaq 100 FoF"
                            android:textColor="@color/positive_text_1"
                            android:textSize="@dimen/synopsis1_box_winner_name" />

                        <TextView android:id="@+id/synopsis_box_top_profit_fund_value_profit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="25dp"
                            android:text="100,000 - 20.2%"
                            android:textColor="@color/positive_text_1"
                            android:textSize="@dimen/synopsis1_box_data" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/synopsis_box_largest_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_rect_shape_positive_info_3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="25dp"
                            android:text="TOP INVESTED CATEGORY"
                            android:textColor="@color/positive_text_1"
                            android:textSize="@dimen/synopsis1_box_name" />

                        <TextView android:id="@+id/synopsis_box_largest_category_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Contra Funds"
                            android:textColor="@color/positive_text_1"
                            android:textSize="@dimen/synopsis1_box_winner_name" />

                        <TextView android:id="@+id/synopsis_box_largest_category_funds_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="@color/positive_text_1"
                            android:textSize="@dimen/synopsis1_box_data" />

                        <TextView android:id="@+id/synopsis_box_largest_category_inv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="25dp"
                            android:gravity="center"
                            android:text="2,345,000"
                            android:textColor="@color/positive_text_1"
                            android:textSize="@dimen/synopsis1_box_data" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/synopsis_box_biggest_fund_house"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_rect_shape_positive_info_4"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="25dp"
                            android:text="TOP INVESTED FUND HOUSE"
                            android:textColor="@color/negative_text_2"
                            android:textSize="@dimen/synopsis1_box_name" />

                        <TextView android:id="@+id/synopsis_box_biggest_fund_house_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Axis AMC"
                            android:gravity="center"
                            android:textColor="@color/negative_text_2"
                            android:textSize="@dimen/synopsis1_box_winner_name" />

                        <TextView android:id="@+id/synopsis_box_biggest_fund_house_inv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="25dp"
                            android:text="2,345,000"
                            android:textColor="@color/negative_text_2"
                            android:textSize="@dimen/synopsis1_box_data" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/synopsis_box_least_performing_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_rect_shape_negative_info_1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="25dp"
                            android:text="LEAST PERFORMING CATEGORY"
                            android:textColor="@color/negative_text_2"
                            android:textSize="@dimen/synopsis1_box_name" />

                        <TextView android:id="@+id/synopsis_box_least_performing_category_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Smallcap Funds"
                            android:gravity="center"
                            android:textColor="@color/negative_text_2"
                            android:textSize="@dimen/synopsis1_box_winner_name" />

                        <TextView android:id="@+id/synopsis_box_least_performing_category_funds_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textColor="@color/negative_text_2"
                            android:textSize="@dimen/synopsis1_box_data" />

                        <TextView android:id="@+id/synopsis_box_least_performing_category_invested"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="25dp"
                            android:text="2,345,000"
                            android:textColor="@color/negative_text_2"
                            android:textSize="@dimen/synopsis1_box_data" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/synopsis_box_lest_performing_fund"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_rect_shape_negative_info_2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="25dp"
                            android:text="LEAST PERFORMING FUND"
                            android:textColor="@color/negative_text_1"
                            android:textSize="@dimen/synopsis1_box_name" />

                        <TextView android:id="@+id/synopsis_box_lest_performing_fund_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Axis Bluechip Fund"
                            android:textColor="@color/negative_text_1"
                            android:textSize="@dimen/synopsis1_box_winner_name" />

                        <TextView android:id="@+id/synopsis_box_lest_performing_fund_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="25dp"
                            android:text="125,334 - (-11.2%)"
                            android:textColor="@color/negative_text_1"
                            android:textSize="@dimen/synopsis1_box_data" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/synopsis_box_least_invested_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_rect_shape_negative_info_3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="30dp"
                            android:text="LEAST INVESTED CATEGORY"
                            android:textColor="@color/negative_text_1"
                            android:textSize="@dimen/synopsis1_box_name" />

                        <TextView android:id="@+id/synopsis_box_least_invested_category_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="L&amp;T Emerging Business Fund"
                            android:gravity="center"
                            android:textColor="@color/negative_text_1"
                            android:textSize="@dimen/synopsis1_box_winner_name" />

                        <TextView android:id="@+id/synopsis_box_least_invested_category_funds_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="@color/negative_text_1"
                            android:textSize="@dimen/synopsis1_box_data" />

                        <TextView android:id="@+id/synopsis_box_least_invested_category_inv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="25dp"
                            android:text="2,345,000"
                            android:textColor="@color/negative_text_1"
                            android:textSize="@dimen/synopsis1_box_data" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/synopsis_box_smallest_fund_house"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_rect_shape_negative_info_4"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="25dp"
                            android:text="LEAST INVESTED FUND HOUSE"
                            android:textColor="@color/negative_text_1"
                            android:textSize="@dimen/synopsis1_box_name" />

                        <TextView android:id="@+id/synopsis_box_smallest_fund_house_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Axis AMC DUmmy dummy"
                            android:textColor="@color/negative_text_1"
                            android:textSize="@dimen/synopsis1_box_winner_name" />

                        <TextView android:id="@+id/synopsis_box_smallest_fund_house_inv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="25dp"
                            android:text="2,345,000"
                            android:textColor="@color/negative_text_1"
                            android:textSize="@dimen/synopsis1_box_data" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>